spring.application.name=api-gateway
server.port=9191
eureka.client.service-url.defaultZone=${EUREKA_URI:http://localhost:8761/eureka}
eureka.instance.prefer-ip-address=true

management.endpoints.web.exposure.include=*

## Routes for Price Service
spring.cloud.gateway.routes[0].id=PRICE-SERVICE
spring.cloud.gateway.routes[0].uri=lb://PRICE-SERVICE
spring.cloud.gateway.routes[0].predicates[0]=Path=/api/shopping/price/**

## Routes for Inventory Service
spring.cloud.gateway.routes[1].id=INVENTORY-SERVICE
spring.cloud.gateway.routes[1].uri=lb://INVENTORY-SERVICEE
spring.cloud.gateway.routes[1].predicates[0]=Path=/api/shopping/inventory/**

## Routes for Product Service
spring.cloud.gateway.routes[2].id=PRODUCT-SERVICE
spring.cloud.gateway.routes[2].uri=lb://PRODUCT-SERVICE
spring.cloud.gateway.routes[2].predicates[0]=Path=/api/shopping/product/**
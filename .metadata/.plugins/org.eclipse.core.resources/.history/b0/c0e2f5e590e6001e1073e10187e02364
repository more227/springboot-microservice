package com.microservice.leadassessment.priceservice;

import java.util.HashMap;
import java.util.Map;

public class Testing {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Testing test = new Testing();
		test.display("Java developers are jool Dudes");
		test.charcount("aaabbsssaaaccccdd");
	}
	
	public void charcount(String str) {
	
	String result ="";	
	        int count = 1;
	        for (int i = 0; i < str.length(); i = i + count) {
	            count = 1;
	            for (int j = i + 1; j < str.length(); j++) {
	                if (str.charAt(i) == str.charAt(j)) {
	                    count = count + 1;
	                } else {
	                   
	                    break;
	                }
	            }//end of inner for
	            result =result+str.charAt(i) + "" + (count-1);
	           
	        }//end of outer for
	        
	        System.out.println("final output : "+result);
	}
	
	public void display(String str)
	{
		
		 str = str.toLowerCase(); // to avoid any case sensitive issue

		    for (int i = 0; i < str.length(); i++) {
		      if (str.lastIndexOf(str.charAt(i)) > i) {
		        return str.charAt(i);
		      }
		    }

		
	}

}

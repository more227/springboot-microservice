package com.microservice.leadassessment.priceservice;

import java.util.HashMap;
import java.util.Map;

public class Testing {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Testing test = new Testing();
		//test.display("Java developers are jool Dudes");
		test.charcount("aaabbsssaaaccccdd");
	}
	
	public void charcount(String str) {
	
		
	        int count = 1;
	        for (int i = 0; i < str.length(); i = i + count) {
	            count = 1;
	            for (int j = i + 1; j < str.length(); j++) {
	                if (str.charAt(i) == str.charAt(j)) {
	                    count = count + 1;
	                } else {
	                   
	                    break;
	                }
	            }//end of inner for
	            System.out.println(str.charAt(i) + "" + (count-1));
	        }//end of outer for
	}
	
	public void display(String value)
	{
		HashMap<Character, Integer> map = new HashMap<>();
		char s[] =  value.toCharArray(); 
		for (char c : s) {
			if(map.containsKey(c))
				map.put(c, map.get(c)+1);
			else
				map.put(c, 1);
			
			
		}
		
		for(Map.Entry<Character, Integer> entry : map.entrySet())
		{
			System.out.println(entry.getKey() +" "+entry.getValue());
		}
		
	}

}
